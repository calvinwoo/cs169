-# in app/views/movies/show.html.haml

%h2 Details about #{@movie.title}

%ul#details
  %li
    - if @movie.director
      Director:
      = @movie.director
    - else
      = @movie.title 
      has no director info
  %li
    Rating:
    = @movie.rating
  %li
    Released on:
    = @movie.release_date.strftime("%B %d, %Y")

%h3 Description:

%p#description= @movie.description

= link_to 'Edit', edit_movie_path(@movie)
<br>
-# if @movie.director and @movie.director != ""
= link_to 'Find Movies With Same Director', similar_director_path(@movie)
-# else
-#= link_to 'Find Movies With Same Director', movies_path(:no_director => @movie.title)
= button_to 'Delete', movie_path(@movie), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Back to movie list', movies_path
